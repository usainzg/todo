<section class="row">

  <article class="login col offset-2 s12 container">
    <h4>Login</h4>
    <form action="/login" method="post">

      <div class="input-field col offset-s4 s8">
        <input placeholder="Add your email" id="login-email" type="email" class="validate" name="email">
        <label for="login-email">Email</label>
      </div>
      <div class="input-field col offset-s4 s8">
        <input placeholder="Add your password" id="login-password" type="password" class="validate" name="password">
        <label for="login-password">Password</label>
      </div>

      <div class="input-field col offset-s4 s8">
        <button type="submit" class="waves-effect waves-light btn">Login</button>
        <br><br>
        <a href="#" class="show-sign-up text lighten-2">Show me sign-up</a>
      </div>
    </form>
  </article>

  <article class="sign-up col s12">
    <h2>Sign up</h2>
    <form action="/user" method="post">

      <input type="text" name="nickname">
      <br><br>
      <input type="email" name="email">
      <br><br>
      <input type="password" name="password">
      <br><br>
      <button type="submit">Signg up</button>

    </form>

    <a href="#" class="show-login">Show me login</a>
  </article>

</section>
